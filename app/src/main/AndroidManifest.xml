            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!-- <activity android:name=".NetworkExample"></activity> -->
        <activity
            android:name=".TrafficPredictionActivity"
